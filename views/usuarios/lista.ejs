<!DOCTYPE html>
<html>
    <head>
        <title><%=title%></title>
        <link href=https://fonts.googleapis.com/icon?family=Material+Icons rel=stylesheet>
        <link rel=stylesheet href=/styles/css/style.css />
        <link rel="shortcut icon" type=image/png href=/images/favicon.png/>
    </head>
    <body>
        <header class=scania-header>
            <nav class="sidenav">
                <div class=nav-wrapper>
                    <a href=javascript:void(0); class="brand-logo center"><img src=/images/logo.png alt="Scania Logo"></a>
                    <%- include('../components/top-menu', op); %>
                </div>
            </nav>
        </header>

    <main>
        <div class="row">
            <div class="col s2 menu-escolhas no-padding">
                    <%- include('../components/side-menu', red, blue); %>
            </div>
            <div class="col s10 no-padding">
                <div class="row"></div>
                <a class="right btn modal-trigger btn-add" href=#lista-adicionar>+ Adicionar</a>
                <div class="row"></div>
                <table class="striped centered">
                    <thead>
                        <th>Id</th>
                        <th>Nome</th>
                        <th>E-mail</th>
                        <th>Perfil</th>
                        <th>Setor</th>
                        <th></th>
                    </thead>
                    <tbody class="dispositivos-lista">
                            <% usuarios.forEach(function(usuario){ %>
                                <tr>
                                    <td><%= usuario.id %></td>
                                    <td><%= usuario.nome %></td>
                                    <td><%= usuario.email %></td>
                                    <td><%= usuario.perfil %></td>
                                    <td><%= usuario.setor %></td>
                                    <td>
                                        <a class="modal-trigger edit-item" href="#lista-editar-item"><i class="material-icons">edit</i></a>
                                        <a class="del-item" href="/perfil/delete/<%= usuario.id %>"><i class="material-icons">delete</i></a>
                                    </td>
                                </tr>
                            <% }); %>
                    </tbody>
                </table>
                </div>
        </div>
    </main>

    <div id="lista-adicionar" class="modal modal-profile">
        <div class="modal-content">
            <form class="col s12">
                <div class="row">
                    <div class="input-field col s12">
                        <input type="text" id="descricaoAdicionar" name="descricaoAdicionar">
                        <label for="descricao">Descrição</label>
                    </div>
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <button id="add-perfil"  type="submit" class="modal-close btn">Adicionar</button>
        </div>
    </div>

    <div id="lista-editar-item" class="modal modal-profile">
        <div class="modal-content">
            <form class="col s12">
                <div class="row">
                    <div class="input-field col s12">
                        <input type="text" id="descricaoAlterar" name="descricaoAlterar" placeholder="Descrição">
                        <input type="hidden" id="id" name="id">
                        <label for="descricao">Descrição</label>
                    </div>
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <button id="updt-perfil" type="submit" class="modal-close btn">Alterar</button>
        </div>
    </div>

    <script src=/lib/jquery.js></script>
    <script src=/lib/materialize.js></script>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script src=/js/materialize.js></script>
    <script src=/js/usuario.js></script>
    </body>
</html>